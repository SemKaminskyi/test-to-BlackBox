<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frag_game_margin_top_text"
        android:text="@string/task"
        android:textStyle="bold"
        android:textSize="@dimen/frag_game_task_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/iv_animal"
        android:layout_width="@dimen/frag_game_img_animal_size"
        android:layout_height="@dimen/frag_game_img_animal_size"
        android:layout_marginTop="@dimen/frag_game_img_animal_margitn_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_task" />

    <ImageButton
        android:id="@+id/imb_v1"
        android:layout_width="@dimen/frag_game_img_but_choose"
        android:layout_height="@dimen/frag_game_img_but_choose"
        android:layout_marginStart="@dimen/frag_game_imgb_margin_start_end"
        android:layout_marginTop="@dimen/frag_game_img_animal_margitn_top"
        android:layout_marginEnd="@dimen/frag_game_imgview_padding_inside"
        android:layout_marginBottom="@dimen/frag_game_imgview_padding_inside"
        app:layout_constraintBottom_toTopOf="@+id/imb_v3"
        app:layout_constraintEnd_toStartOf="@+id/imb_v2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_animal" />

    <ImageButton
        android:id="@+id/imb_v2"
        android:layout_width="@dimen/frag_game_img_but_choose"
        android:layout_height="@dimen/frag_game_img_but_choose"
        android:layout_marginStart="@dimen/frag_game_imgview_padding_inside"
        android:layout_marginTop="@dimen/frag_game_img_animal_margitn_top"
        android:layout_marginEnd="@dimen/frag_game_imgb_margin_start_end"
        android:layout_marginBottom="@dimen/frag_game_imgview_padding_inside"
        app:layout_constraintBottom_toTopOf="@+id/imb_v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imb_v1"
        app:layout_constraintTop_toBottomOf="@+id/iv_animal" />

    <ImageButton
        android:id="@+id/imb_v3"
        android:layout_width="@dimen/frag_game_img_but_choose"
        android:layout_height="@dimen/frag_game_img_but_choose"
        android:layout_marginStart="@dimen/frag_game_imgb_margin_start_end"
        android:layout_marginTop="@dimen/frag_game_imgview_padding_inside"
        android:layout_marginEnd="@dimen/frag_game_imgview_padding_inside"
        app:layout_constraintEnd_toStartOf="@+id/imb_v4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imb_v1" />

    <ImageButton
        android:id="@+id/imb_v4"
        android:layout_width="@dimen/frag_game_img_but_choose"
        android:layout_height="@dimen/frag_game_img_but_choose"
        android:layout_marginStart="@dimen/frag_game_imgview_padding_inside"
        android:layout_marginTop="@dimen/frag_game_imgview_padding_inside"
        android:layout_marginEnd="@dimen/frag_game_imgb_margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imb_v3"
        app:layout_constraintTop_toBottomOf="@+id/imb_v2" />


</androidx.constraintlayout.widget.ConstraintLayout>